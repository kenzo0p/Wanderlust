<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp for wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input required id="username" type="text" class="form-control" name="username" placeholder="Enter your username">
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    You Must Write A Username!
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input required id="email" type="email" class="form-control" name="email" placeholder="Enter your email address">
                <div class="valid-feedback">
                    Good!
                </div>
                <div class="invalid-feedback">
                    You Must Write A Email!
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input required id="password" type="password" class="form-control" name="password" placeholder="Enter your password">
                <div class="valid-feedback">
                    Good!
                </div>
                <div class="invalid-feedback">
                    You Must Write A Password!
                </div>
            </div>
            <button class="btn btn-outline-success">SignUp</button>
        </form>
    </div>
</div>